#Question 1:

import numpy as np

class My_Array:
    def __init__(self):
        self.size = 0
        self.capacity = 1
        self.array = np.zeros(self.capacity)

    def append(self, number : float):

        if self.capacity == self.size:
            self.capacity = 2*self.capacity
            new_list = np.zeros(self.capacity)
            for i in range(self.array.size):
                new_list[i] += self.array[i]
            self.array = new_list
        if self.size < self.capacity:
            self.array[self.size] = number
            self.size += 1
        return self.array

    def __str__(self):
        return 'The array is {}'.format(self.array)

a = My_Array()
a.append(2)    
print(a)        
a.append(3)
print(a)
a.append(4)
a.append(5)
print(a)
